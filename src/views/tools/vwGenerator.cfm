<cfoutput><cfset rc = event.getCollection()><!--- HELPBOX --->#renderView("tags/help")#<!--- serverBrowser Content ---><div class="server_browser" id="server_browser" style="display:none"></div><form name="updateform" id="updateform" onSubmit="validateGeneration('#rc.xehGenerate#')" method="POST"><div class="maincontentbox">	<div class="contentboxes_header">		<div class="contentboxes_title"><img src="images/icons/tools_27.gif" align="absmiddle" />&nbsp; Application Generator</div>	</div>	<!--- MESSAGEBOX --->	#getPlugin("messagebox").renderit()#	<!--- CONTENT --->	<div class="contentboxes">		<p>		Welcome to the ColdBox Application Generator. You will be able to generate a working application by just filling out the following form.  Please note that the generator will also create a <strong>.project</strong> file for you to use within Eclipse. You can then just import the project into your workspace.		</p>		<fieldset>	    	<legend><strong>Application Configuration</strong></legend>			<table width="100%" border="0" cellspacing="0" cellpadding="5" class="tablelisting">				<tr>					<td align="right" width="40%" style="border-right:1px solid ##ddd">						<strong>Application Name <span class="redtext">*</span></strong>						<br />(Try not to use strange characters)					</td>					<td>						<input type="text" name="appname" id="appname" value="" size="25" maxlength="30" class="required"> <em>Keep it simple!!</em>					</td>				</tr>				<tr bgcolor="##ffffff" onMouseOver="getHint('appmapping')" onMouseOut="resetHint()">					<td align="right"  style="border-right:1px solid ##ddd">						<strong>Application Location <span class="redtext">*</span></strong>						<br />(Choose where to generate your application)					</td>					<td>						<input type="text" name="applocation" id="applocation" value="" size="40" class="required"> <a href="javascript:openServerBrowser('#rc.xehServerBrowser#','applocation')" title="Select from web root"><img id="appmapping_img" src="images/icons/folder.png" border="0" align="absmiddle" title="Select from web root"></a>					</td>				</tr>								<tr>					<td align="right" width="40%" style="border-right:1px solid ##ddd">						<strong>Event Name <span class="redtext">*</span></strong>					</td>					<td>						<input type="text" name="eventname" id="eventname" value="#getSetting("eventName",true)#" size="25" maxlength="30" class="required">					</td>				</tr>			 	<tr bgcolor="##ffffff">					<td align="right" width="40%" style="border-right:1px solid ##ddd">						<strong>Outgoing Email Address</strong>						<br />Used for bug reports and outgoing emails.					</td>					<td>						<input type="text" name="owneremail" id="owneremail" value="" size="25" maxlength="30" class="required">					</td>				</tr>				<tr>					<td align="right"  style="border-right:1px solid ##ddd">						<strong>Unit Testing Framework<span class="redtext">*</span></strong>					</td>					<td>						<input type="radio" name="unittesting_framework" id="unittesting_framework" value="mxunit" checked="checked">MXUnit						<input type="radio" name="unittesting_framework" id="unittesting_framework" value="cfcunit">cfcUnit					</td>				</tr>								<tr bgcolor="##ffffff">					<td align="right"  style="border-right:1px solid ##ddd">						<strong>Create Custom Error Template<span class="redtext">*</span></strong>					</td>					<td>						<input type="radio" name="custom_error_template" id="custom_error_template" value="true" checked="checked">True						<input type="radio" name="custom_error_template" id="custom_error_template" value="false">False					</td>				</tr>				<tr >					<td align="right"  style="border-right:1px solid ##ddd">						<strong>Create Exception Handler<span class="redtext">*</span></strong>						<br />If created, you will need to do all error logging.					</td>					<td>						<input type="radio" name="exception_handler" id="exception_handler" value="true" >True						<input type="radio" name="exception_handler" id="exception_handler" value="false" checked="checked">False					</td>				</tr>								<tr bgcolor="##ffffff">					<td align="right"  style="border-right:1px solid ##ddd">						<strong>Config Auto Reload<span class="redtext">*</span></strong><br />						(If enabled, each request will be the first request)					</td>					<td>						<select name="configautoreload" id="configautoreload" onChange="toggleLogsLocation()">							<option value="true"  >Enabled</option>							<option value="false" selected="selected">Disabled</option>						</select>						<em>Auto Reloads the entire application</em>					</td>				</tr>				<tr>					<td align="right"  style="border-right:1px solid ##ddd">						<strong>Handlers Index Auto Reload<span class="redtext">*</span></strong><br />						(Use only for development)					</td>					<td>						<select name="handlersindexautoreload" id="handlersindexautoreload" onChange="toggleLogsLocation()">							<option value="true"  selected="selected">Enabled</option>							<option value="false" >Disabled</option>						</select>						<em>Re-creates the handlers index</em>					</td>				</tr>				<tr bgcolor="##ffffff">					<td align="right"  style="border-right:1px solid ##ddd">						<strong>Environments Interceptor</strong>						<br />Create the environments configuration file and interceptor declaration					</td>					<td>						<input type="radio" name="environments" id="environments" value="true" checked="checked">True						<input type="radio" name="environments" id="environments" value="false">False					</td>				</tr>				<tr >					<td align="right" width="40%" style="border-right:1px solid ##ddd">						<strong>Debug Mode</strong><br />					</td>					<td>						<strong>TRUE</strong> <em>(Change to FALSE in production)</em>					</td>				</tr>				<tr bgcolor="##ffffff">					<td align="right" width="40%" style="border-right:1px solid ##ddd">						<strong>Handler & Event Caching</strong><br />					</td>					<td>						<strong>FALSE</strong> <em>(Change to TRUE in production)</em>					</td>				</tr>				<tr>					<td align="right" width="40%" style="border-right:1px solid ##ddd">						<strong>Debug Password, Reinit Password</strong><br />					</td>					<td>						<strong>NONE</strong> <em>(Set these passwords when moving to production)</em>					</td>				</tr>								<tr bgcolor="##ffffff">					<td align="right" width="40%" style="border-right:1px solid ##ddd">						<strong>Default Layout</strong><br />					</td>					<td>						Layout.Main.cfm <em>(Generated for you)</em>					</td>				</tr>			</table>	    </fieldset>		<fieldset >		<legend><strong>Logging & Debugging</strong></legend>		<table width="100%" border="0" cellspacing="0" cellpadding="5" class="tablelisting">			<tr>				<td align="right" width="40%" style="border-right:1px solid ##ddd">					<strong>ColdBox Logging<span class="redtext">*</span></strong><br />				</td>				<td>					<select name="coldboxlogging" id="coldboxlogging" onChange="toggleLogsLocation()">						<option value="true" selected="selected" >Enabled</option>						<option value="false" >Disabled</option>					</select>				</td>			</tr>			<tr bgcolor="##ffffff" id="tr_coldboxlogslocation">				<td align="right"  style="border-right:1px solid ##ddd">					<strong>Colbox Log Location<span class="redtext">*</span> </strong><br />(Relative to app root or absolute path)				</td>				<td>					<input type="text" name="coldboxlogslocation" id="coldboxlogslocation" value="logs" size="40"> <a href="JavaScript:openServerBrowser('#rc.xehServerBrowser#','coldboxlogslocation')" title="Select from web root"><img id="coldboxlogslocation_img" src="images/icons/folder.png" border="0" align="absmiddle"></a>				</td>			</tr>			<tr>				<td align="right"  style="border-right:1px solid ##ddd">					<strong>Coldfusion Logging<span class="redtext">*</span></strong>				</td>				<td>					<select name="coldfusionlogging" id="coldfusionlogging">						<option value="true"  >Enabled</option>						<option value="false" selected="selected" >Disabled</option>					</select>				</td>			</tr>			 <tr bgcolor="##ffffff">				<td align="right"  style="border-right:1px solid ##ddd">					<strong>Enable E-Mail Bug Reports<span class="redtext">*</span></strong>				</td>				<td>					<select name="enablebugreports" id="enablebugreports" onChange="toggleBugReportEmails()">						<option value="true"  >Enabled</option>						<option value="false" selected="selected" >Disabled</option>					</select>				</td>			</tr>			<tr id="tr_bugreportEmails" style="display:none">				<td align="right"  style="border-right:1px solid ##ddd">					<strong>Emails Receiving Bug Reports</strong>				</td>				<td>					<input name="bugemailadd" id="bugemailadd" type="text" size="20" />					<input type="button" name="addemail_btn" value="Add" onclick="addemail()" style="font-size:9px"/>					<input type="button" name="addemail_btn" value="Remove" onclick="removeemail()" style="font-size:9px"/>					<br />					<input type="hidden" name="bugemails" id="bugemails" value="">					<select name="select_bugemails" size="5" id="select_bugemails" style="width: 250px">					</select>				</td>			</tr>		</table>		</fieldset>    	<!--- Required Fields --->		<div class="redtext">* Required Fields</div>	   	<div align="center" style="margin-top:30px">			<a class="action" href="javascript:validateGeneration('#rc.xehGenerate#')" title="Generate Application">				<span>Generate</span>			</a>		</div>	</div></div></form></cfoutput>