<cfoutput><cfset rc = event.getCollection()><!--- HELPBOX --->#renderView("tags/help")#<!--- serverBrowser Content ---><div class="server_browser" id="server_browser" style="display:none"></div><form name="updateform" id="updateform" onSubmit="validateGeneration('#rc.xehGenerate#')" method="POST"><div class="maincontentbox">	<div class="contentboxes_header">		<div class="contentboxes_title"><img src="includes/images/icons/tools_27.gif" align="absmiddle" />&nbsp; Application Generator</div>	</div>	<!--- MESSAGEBOX --->	#getPlugin("MessageBox").renderit()#	<!--- CONTENT --->	<div class="contentboxes">		<p>		Welcome to the ColdBox Application Generator. You will be able to generate a working application by just filling out the following form.  Please note that the generator will also create a <strong>.project</strong> file for you to use within Eclipse. You can then just import the project into your workspace.		</p>		<fieldset>	    	<legend><strong>Application Configuration</strong></legend>			<table width="100%" border="0" cellspacing="0" cellpadding="5" class="tablelisting">				<tr>					<td align="right" width="40%" style="border-right:1px solid ##ddd">						<strong>Application Name <span class="redtext">*</span></strong>						<br />(Try not to use strange characters)					</td>					<td>						<input type="text" name="appname" id="appname" value="" size="25" maxlength="30" class="required"> <em>Keep it simple!!</em>					</td>				</tr>				<tr onMouseOver="getHint('appmapping')" onMouseOut="resetHint()">					<td align="right"  style="border-right:1px solid ##ddd">						<strong>Application Location <span class="redtext">*</span></strong>						<br />(Choose where to generate your application)					</td>					<td>						<input type="text" name="applocation" id="applocation" value="" size="40" class="required"> <a href="javascript:openServerBrowser('#rc.xehServerBrowser#','applocation')" title="Select from web root"><img id="appmapping_img" src="includes/images/icons/folder.png" border="0" align="absmiddle" title="Select from web root"></a>					</td>				</tr>								<tr>					<td align="right"  style="border-right:1px solid ##ddd">						<strong>Application To Generate<span class="redtext">*</span></strong>						<br />Choose a template to generate					</td>					<td>						<select name="appTemplate" id="appTemplate">							<option selected="selected">Advanced</option>							<option>FlexAirRemote</option>							<option>Simple</option>							<option>SuperSimple</option>						</select>					</td>				</tr>							 	<tr>					<td align="right" width="40%" style="border-right:1px solid ##ddd">						<strong>SES Rewrite Engine</strong><br />						None will use front controller approach: index.cfm/event					</td>					<td>						<select name="rewriteengine" id="rewriteengine">							<option value="mod_rewrite"  selected="selected">mod_rewrite</option>							<option value="isapi" >ISAPI</option>							<option value="webconfig" >IIS web.config</option>							<option value="none" >None</option>						</select>					</td>				</tr>			</table>	    </fieldset>    	<!--- Required Fields --->		<div class="redtext">* Required Fields</div>	   	<div align="center" style="margin-top:30px">			<a class="action" href="javascript:validateGeneration('#rc.xehGenerate#')" title="Generate Application">				<span>Generate</span>			</a>		</div>	</div></div></form></cfoutput>