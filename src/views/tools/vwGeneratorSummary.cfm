<cfset rc = event.getCollection()><div class="maincontentbox">	<div class="contentboxes_header">		<div class="contentboxes_title"><img src="includes/images/icons/tools_27.gif" align="absmiddle" />&nbsp; Generation Report</div>	</div>	<cfoutput>	#getPlugin("MessageBox").renderit()#	</cfoutput>	<!--- CONTENT --->	<div class="contentboxes">		<cfoutput>		<p>			Your application was generated at the following location: <strong>#rc.appRelocation#</strong>.			<br /><br />		</p>		</cfoutput>		<div style="overflow:auto; height:250px">		<table width="100%" border="0" cellspacing="0" cellpadding="5" class="tablelisting">			<tr>				<td class="sort">Generated Files</td>			</tr>			<cfoutput query="rc.qappListing">			<tr <cfif currentrow mod 2 eq 0> class="even"</cfif>>				<td>				#rc.qappListing.directory#/#rc.qappListing.name#				</td>			</tr>			</cfoutput>		</table>		</div>		<cfif rc.appOutsideWebroot eq false>		<p align="center">			<strong>Please click on the button below to open your application and test drive it now!!</strong>		</p>				<cfoutput>	   	<div align="center" style="margin-top:30px">			<a class="action" href="#rc.webrootLocation#" title="Open Application" target="_blank">				<span>Open Application</span>			</a>		</div>		</cfoutput>				</cfif>	</div></div></form>